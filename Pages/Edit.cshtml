@page "{id:int}"
@model MyWebApp.Pages.Employees.EditModel

@if (Model.Employee == null)
{
    <h2 style="color: red; text-align: center;">Employee Not Found</h2>
    <div style="text-align: center; margin-top: 20px;">
        <a href="/Employees/Index" style="padding:10px 20px; background-color:#6c757d; color:white; text-decoration:none; border-radius:5px;">
            Back
        </a>
    </div>
}
else
{
    <h2 style="text-align: center;">Edit Employee</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="color: green; background-color: #d4edda; padding: 10px; border-radius: 5px; text-align: center; margin-bottom: 15px;">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post" style="max-width: 400px; margin: auto; display: flex; flex-direction: column;">
        <input type="hidden" asp-for="Employee.EmployeeID" />

        <label for="name">Employee Name:</label>
        <input type="text" id="name" asp-for="Employee.EmployeeName" required style="margin-bottom: 10px; padding: 8px; width: 100%;" />

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" asp-for="Employee.DateOfBirth" required style="margin-bottom: 10px; padding: 8px; width: 100%;" />

        <label for="doj">Date of Joining:</label>
        <input type="date" id="doj" asp-for="Employee.DateOfJoining" required style="margin-bottom: 10px; padding: 8px; width: 100%;" />

        <label for="email">Email:</label>
        <input type="email" id="email" asp-for="Employee.Email" required style="margin-bottom: 10px; padding: 8px; width: 100%;" />

        <button type="submit" style="padding:10px; background-color:brown; color:white; border:none; border-radius:5px; cursor:pointer;">
            Save
        </button>
    </form>

   }
